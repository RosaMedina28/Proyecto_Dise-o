<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/OO">



    <EditText
        android:id="@+id/edit_email_l"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="-1dp"
        android:focusable="true"
        android:background="#7E57C2"
        android:hint="Enter Email"
        android:textColorHint="#EDE7F6"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/edit_password_l"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_below="@+id/edit_email_l"
        android:layout_centerInParent="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="1dp"
        android:background="#7E57C2"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="24dp"
        android:textColorHint="#EDE7F6"/>

    <Button
        android:id="@+id/btn_login"
        android:onClick="evento_login"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_password_l"
       android:layout_centerInParent="true"
        android:layout_marginTop="27dp"
        android:background="#9575DC"
        android:textColor="#EDE7F6"
        android:text="login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@id/btn_login"
        android:layout_centerInParent="true"
        android:id="@+id/or"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Acount?"
        android:onClick="evento_registro_cambio"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@id/or"
        android:layout_centerInParent="true"
        />






</RelativeLayout>